{
  "name": "@ctrl/deluge",
  "version": "7.4.0",
  "description": "TypeScript api wrapper for deluge using ofetch",
  "author": "Scott Cooper <scttcper@gmail.com>",
  "license": "MIT",
  "repository": "scttcper/deluge",
  "homepage": "https://deluge.vercel.app",
  "keywords": [
    "deluge",
    "typescript"
  ],
  "type": "module",
  "main": "./dist/src/index.js",
  "typings": "./dist/src/index.d.ts",
  "files": [
    "dist/src"
  ],
  "sideEffects": false,
  "scripts": {
    "lint": "oxlint . && prettier --check . --experimental-cli",
    "lint:fix": "oxlint . --fix && prettier --write . --log-level=error --experimental-cli",
    "prepare": "npm run build",
    "build": "tsc",
    "build:docs": "typedoc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ci": "vitest run --coverage --reporter=default --reporter=junit --outputFile=./junit.xml"
  },
  "dependencies": {
    "@ctrl/magnet-link": "^4.2.0",
    "@ctrl/shared-torrent": "^6.5.0",
    "node-fetch-native": "^1.6.7",
    "ofetch": "^1.4.1",
    "tough-cookie": "^6.0.0",
    "type-fest": "^5.0.1",
    "ufo": "^1.6.1",
    "uint8array-extras": "^1.5.0"
  },
  "devDependencies": {
    "@ctrl/oxlint-config": "1.2.6",
    "@sindresorhus/tsconfig": "8.0.1",
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "@types/node": "24.6.1",
    "@vitest/coverage-v8": "3.2.4",
    "oxlint": "1.19.0",
    "p-wait-for": "6.0.0",
    "prettier": "3.6.2",
    "typedoc": "0.28.13",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "release": {
    "branches": [
      "master"
    ]
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.17.1",
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid",
    "semi": true,
    "printWidth": 100,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "^node:.*$",
      "<THIRD_PARTY_MODULES>",
      "^(@ctrl)(/.*|$)",
      "^\\.\\./(?!.*\\.css$)",
      "^\\./(?!.*\\.css$)(?=.*/)",
      "^\\./(?!.*\\.css$)(?!.*/)"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": false
  }
}
